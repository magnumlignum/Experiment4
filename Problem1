#include<iostream>
using namespace std;
int main()
{
	int x,y,z,ans,confirm;
	char repeat;
	
	do
	{
		cout<<"FUNCTIONS:\n1. Add\n2. Subtract\n3. Multiply\n4. Divide\n5. Modulus\n\nSelect Function: ";
		cin >> x;
		
		if(x==1)
		{
			cout<<"\nInput two addends:\n";
			cin>>y;
			cin>>z;
			ans=y+z;
			cout<<"\nSum: "<<ans;
		}
		else if(x==2)
		{
			cout<<"\nInput minuend and subtrahend:\n";
			cin>>y;
			cin>>z;
			ans=y-z;
			cout<<"\nDifference: "<<ans;
		}
		else if(x==3)
		{
			cout<<"\nInput two factors:\n";
			cin>>y;
			cin>>z;
			ans=y*z;
			cout<<"\nProduct: "<<ans;
		}
		else if(x==4)
		{
			cout<<"\nInput dividend and divisor:\n";
			cin>>y;
			cin>>z;
			ans=y/z;
			cout<<"\nQuotient: "<<ans;
		}
		else if(x==5)
		{
			cout<<"\nInput dividend and divisor:\n";
			cin>>y;
			cin>>z;
			ans= y%z;
			cout<<"\nRemainder: "<< ans;
		}
		else
			cout<<"\nInvalid input";
			
		cout<<"\n\nPress Y to continue. Else, press any other key to quit. ";
		cin>>repeat;
		
		if(repeat!='y')
		{
			cout<<"End";
		}
		else
			confirm=1;
			cout<<"\n";
		
	}while(confirm==1);
	
	return 0;
}
